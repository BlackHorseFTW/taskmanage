{
  "name": "taskmanage",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "powershell -c \"$env:ESLINT_CONFIG_PATH='.eslintrc-build.json'; $env:NEXT_DISABLE_ESLINT='1'; next build\"",
    "build:prod": "powershell -c \"$env:ESLINT_CONFIG_PATH='.eslintrc-build.json'; $env:NODE_ENV='production'; next build\"",
    "build:win": "set ESLINT_CONFIG_PATH=.eslintrc-build.json && next build",
    "build:win:prod": "set ESLINT_CONFIG_PATH=.eslintrc-build.json && set NODE_ENV=production && next build",
    "vercel-build": "ESLINT_CONFIG_PATH=.eslintrc-build.json NEXT_DISABLE_ESLINT=1 next build",
    "check": "next lint && tsc --noEmit",
    "db:check": "tsx check-db.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "dev": "next dev --turbo",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "migration:generate": "drizzle-kit generate:pg --schema=./src/server/db/schema.ts"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.8.0",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@t3-oss/env-nextjs": "^0.10.1",
    "@tanstack/react-query": "^5.67.3",
    "@trpc/client": "^11.0.0-rc.446",
    "@trpc/next": "^11.0.1",
    "@trpc/react-query": "^11.0.0-rc.446",
    "@trpc/server": "11.0.0-rc.828",
    "bcrypt": "^5.1.1",
    "cookie": "^1.0.2",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "geist": "^1.3.0",
    "lucia": "^3.2.2",
    "next": "^15.0.1",
    "next-auth": "5.0.0-beta.25",
    "oslo": "^1.2.1",
    "pg": "^8.14.0",
    "postgres": "^3.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "server-only": "^0.0.1",
    "superjson": "^2.2.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "drizzle-kit": "^0.30.6",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.19.3",
    "typescript": "^5.5.3"
  },
  "ct3aMetadata": {
    "initVersion": "7.38.1"
  },
  "packageManager": "pnpm@9.15.4"
}
